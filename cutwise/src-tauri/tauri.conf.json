{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "../build",
    "distDir": "../build"
  },
  "package": {
    "productName": "CutWise",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "title": "CutWise",
        "width": 800,
        "height": 600
      }
    ],
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "msi",
        "nsis"
      ],
      "identifier": "com.cutwise.app",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
