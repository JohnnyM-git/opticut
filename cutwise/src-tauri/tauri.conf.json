{
  "build": {
    "beforeDevCommand": "cd ../backend/main && go build -o main && cd ../../cutwise && pnpm tauri dev",
    "beforeBuildCommand": "cd ../backend/main && go build -o main && cd ../../cutwise && pnpm tauri build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CutWise",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true
      }
    },
    "windows": [
      {
        "title": "CutWise",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.cutwise.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/yourusername/yourrepo/releases/download/{version}/macos-update.zip",
        "https://github.com/yourusername/yourrepo/releases/download/{version}/windows-update.zip",
        "https://github.com/yourusername/yourrepo/releases/download/{version}/linux-update.zip"
      ],
      "dialog": true,
      "pubkey": "your-public-key"
    }
  }
}
