{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "cd ../main && go build -o ../cutwise/src-tauri/resources/main/main.exe -ldflags=-H=windowsgui && go build -o ../cutwise/src-tauri/resources/main/main_unix",
    "devPath": "http://localhost:1420",
    "distDir": "../build"
  },
  "package": {
    "productName": "CutWise",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "CutWise",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["nsis", "msi", "dmg"],
      "identifier": "com.cutwise.app",
      "icon": [
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/main"
      ]
    }
  }
}
